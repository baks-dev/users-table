{% trans_default_domain 'admin.table.actions' %}


<div class="d-flex gap-2">

    <div class="d-flex flex-column gap-2 w-50">
        {# Настройки локали #}

        <div class="card w-100 border-light">
            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Натсройки процесса #}
                        Настройки процесса
                    </h4>
                </div>
            </div>

            <div class="card-body pb-0">

                {{ include(_self|replace({ "form.html.twig": "_trans.html.twig" })) }}

                {{ form_row(form.category, {
                    label: 'admin.form.label.category.name'|trans,
                    placeholder: 'admin.form.label.category.placeholder'|trans,
                    attr: { 'data-select' : 'select2' }
                }) }}



            </div>
        </div>


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Зависимость продукции #}
                        Зависимость продукции
                    </h4>
                </div>
            </div>
            <div class="card-body pb-0">

                <div class="card-body pb-0" id="collection-product">
                    {% for form in form.product %}
                        <div class='mb-3' id='item_{{ form.vars.id }}'>
                            {{ include(_self|replace({ "form.html.twig": "/products/_product.html.twig" })) }}
                        </div>
                    {% else %}
                        <div id="products-alert" class="alert alert-warning" role="alert">
                            Зависимости отсутствуют. Зависимости позволяют данному производственному процессу применять
                            только к указанному списку продукции, в противном случае процесс будет применим к продукции указанной категории.
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="card-footer border-light bg-body d-flex justify-content-between align-items-center">
                <button type="button"
                        id="productAddCollection"
                        class="btn btn-sm btn-outline-primary border-0 product-add-collection"
                        data-prototype="{{ include(_self|replace({ "form.html.twig": "products/_product.prototype.html.twig" }))|e('html_attr') }}"
                        data-collection="{{ form.product.vars.id }}-collection"
                        data-index="{{ form.product.count }}"
                        data-working="{{ form.product.vars.name }}"

                >

                    {# {{ include('@UsersTable/admin/action/newedit/_form/pc/working/_working.prototype.html.twig')|e('html_attr') }} #}

                    <span class="svg-icon svg-icon-2">
							<svg xmlns="http://www.w3.org/2000/svg"
                                 width="24"
                                 height="24"
                                 viewBox="0 0 24 24"
                                 fill="none">
								<rect opacity="0.5"
                                      x="11"
                                      y="18"
                                      width="12"
                                      height="2"
                                      rx="1"
                                      transform="rotate(-90 11 18)"
                                      fill="currentColor">
							</rect>
								<rect x="6" y="11" width="12" height="2" rx="1" fill="currentColor"></rect>
							</svg>
						</span>
                    Добавить еще продукцию
                </button>
            </div>
        </div>

    </div>

    <div class="d-flex flex-column gap-2 w-50 ">


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">
                <div class="card-title">
                    <h4>
                        {# Этапы производства #}
                        Этапы производства
                    </h4>
                </div>
            </div>

            <div class="card-body pb-0" id="collection-working">
                {% for form in form.working %}
                    <div class='mb-3' id='item_{{ form.vars.id }}'>
                        {{ include(_self|replace({ "form.html.twig": "/working/_working.html.twig" })) }}
                    </div>
                {% endfor %}
            </div>


            <div class="card-footer border-light bg-body d-flex justify-content-between align-items-center">
                <button type="button"
                        id="workingAddCollection"
                        class="btn btn-sm btn-outline-primary border-0 working-add-collection"
                        data-prototype="{{ include(_self|replace({ "form.html.twig": "working/_working.prototype.html.twig" }))|e('html_attr') }}"

                        data-collection="{{ form.working.vars.id }}-collection"
                        data-index="{{ form.working.count }}"
                        data-working="{{ form.working.vars.name }}"

                >

                    {# {{ include('@UsersTable/admin/action/newedit/_form/pc/working/_working.prototype.html.twig')|e('html_attr') }} #}

                    <span class="svg-icon svg-icon-2">
							<svg xmlns="http://www.w3.org/2000/svg"
                                 width="24"
                                 height="24"
                                 viewBox="0 0 24 24"
                                 fill="none">
								<rect opacity="0.5"
                                      x="11"
                                      y="18"
                                      width="12"
                                      height="2"
                                      rx="1"
                                      transform="rotate(-90 11 18)"
                                      fill="currentColor">
							</rect>
								<rect x="6" y="11" width="12" height="2" rx="1" fill="currentColor"></rect>
							</svg>
						</span>
                    Добавить еще этап производства
                </button>
            </div>


        </div>

    </div>

</div>









