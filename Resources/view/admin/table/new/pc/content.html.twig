{% trans_default_domain 'admin.table' %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 800px;">
    {{ form_start(form) }}
    <div class="modal-content p-3 border-bottom border-5 border-primary">
        <div class="modal-header">

            <h5 class="modal-title">
                {# Удалить транспорт доставки #}
                {{ 'admin.form.header.new'|trans }}

            </h5>

            <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                <span class="svg-icon svg-icon-2x"></span>
            </div>
        </div>

        <div class="modal-body">


            <div class="w-100">
                {{ form_row(form.category, {
                    label : 'Категория производства',
                    placeholder: 'Выберите категорию из списка...',  attr: { 'data-select' : 'select2' } }) }}
            </div>
            <div class="w-100">



            {% if form.category.vars.data %}
                {{ form_row(form.action, {
                    label : 'Производственный процесс',
                    placeholder: 'Выберите производство из списка ...',  attr: { 'data-select' : 'select2' } }) }}
            {% else %}
                {{ form_row(form.action, {
                    label : 'Производственный процесс',
                    placeholder: 'Выберите категорию из списка ...',
                    attr: { disabled : true }
                }) }}
            {% endif %}

            </div>

            {#{% if form.category.vars.data %}#}

                {% if form.action.vars.data %}
                    <div class="w-100">
                    {{ form_row(form.working, {
                        label : 'Действие сотрудника',
                        placeholder: 'Выберите действие ...',
                        attr: { 'data-select' : 'select2' } }) }}
                    </div>
                {% else  %}

                    {{ form_row(form.working, {
                        label : 'Действие сотрудника',
                        placeholder: 'Выберите производственный процесс ...',
                        attr: { placeholder: 'Выберите производственный процесс ...', disabled : true }
                         }) }}

                  {#  {{ form_row(form.working, {
                        label : 'Действие сотрудника',
                        attr: { placeholder : 'Выберите производственный процесс ...' } }) }}#}
                {% endif %}


            {#{% else %}

                {{ form_row(form.working, {
                    label : 'Действие сотрудника',
                    placeholder: 'Выберите производство из списка ...',  attr: { placeholder : 'Выберите категорию из списка...' } }) }}

            {% endif %}#}



            <div class="w-100">
                {{ form_row(form.profile, {
                    label : 'Сотрудник',
                    placeholder: 'Выберите сотрудника',  attr: { 'data-select' : 'select2' } }) }}
            </div>



            <div class="d-flex justify-content-between clearfix">
                <div class="w-100 pe-3">
                    {{ form_row(form.date, { label: 'Дата', attr: { class: 'js-datepicker'} }) }}
                </div>

                <div class="w-100">
                    {{ form_row(form.quantity, { label: 'Количество' }) }}
                </div>
            </div>

        </div>

        <div class="modal-footer">
            {# Отмена #}

            <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                {{ 'btn.cancel'|trans({}, 'core.btn') }}
            </button>

            {# Удалить #}
            {{ form_widget(form.users_table, { label: '
				<span>'~ 'btn.new'|trans({}, 'core.btn') ~'</span>
				<span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
			'}) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>


